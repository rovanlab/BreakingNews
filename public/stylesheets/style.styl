.news-block ul li p a
  color  #252519
  text-decoration none;
.news-block ul li p a:hover
  color #0000cc
.news-block ul li p
  float left;
  padding 0px 5px 0 10px;;
  margin 0;
  width: 75%;

.news-block ul li p .source
  color #CCC;
