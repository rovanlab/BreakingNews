.head
  height: auto;
  padding :10px;
  margin 0;
  background :none repeat scroll 0 0 #EC6F66;
  position fixed;
  width 100%;
.head h1
  margin 0;
  padding 0;
.content
  padding :10px;
.news-block
  border 1px solid #CCC;
  width 600px;
  margin auto;
  padding-top 50 px;
  height auto;
.news-block > h2
  background #CCC;
  color #CCC
  margin 0;
.news-block ul
  list-style none;
  margin 0;
  padding 10px;
.news-block ul li
  list-style none;
  margin-bottom 10px;
  border-bottom 1px solid #CCC;
  padding-bottom 10px;
.news-block ul li img
  float left;
  width 120px;
  head 70px;
  border 1px solid #CCC;
  padding 1px;
